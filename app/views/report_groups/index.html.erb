<p id="notice"><%= notice %></p>

<div class="row">
  <h1 class="mr-3">Report Groups</h1>
  <%= button_to 'Regenerate Groups', report_groups_redo_groups_path, class: "btn btn-primary", method: :post%>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @report_groups.each do |report_group| %>
      <tr>
        <td><%= report_group.name %></td>
        <td><%= link_to 'Show', report_group %></td>
        <td><%= link_to 'Edit', edit_report_group_path(report_group) %></td>
        <td><%= link_to 'Destroy', report_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Report Group', new_report_group_path, class: 'btn btn-primary', method: :get %>
