<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @report_group.name %>
</p>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Description</th>
    <th>Location</th>
    <th>Time</th>
    <th>Involved</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <h3>Reports</h3>

  <tbody>
  <% @contents.each do |report| %>
    <tr>
      <td><%= report.description %></td>
      <td><%= report.location %></td>
      <td><%= report.time %></td>
      <td><%= report.involved %></td>
      <td><%= link_to 'Show', report %></td>
      <td><%= link_to 'Edit', edit_report_path(report) %></td>
      <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'This deletes the report from everywhere, not only the group. Are you sure you want to do this?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_report_group_path(@report_group), class: 'btn btn-primary mb-2', method: :get %>
<%= link_to 'Back', report_groups_path, class: 'ml-2 mb-2 btn btn-secondary', method: :get %>
